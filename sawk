#!/bin/sh

usage() {
	cat <<'EOF'
Sawk is a tool for managing awk source code.

Usage:

	sawk <command> [arguments]

The commands are:

	build       compile packages and dependencies
	fmt         reformat source
	run         compile and run Go program
	version     print Go version
EOF
	exit 1
}

[ "$#" -eq 0 ] && usage && exit 1

cmd="$1" && shift

case "$cmd" in
build | fmt | run) ./sawk-"$cmd" "$@" ;;
*) usage ;;
esac
